# EditorConfig: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Specific file type settings
[*.md]
trim_trailing_whitespace = false

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.html]
indent_size = 2

[*.xml]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Keep minified files as-is
[*.min.js]
indent_style = none
trim_trailing_whitespace = false
insert_final_newline = false

# Package and lock files
[package.json]
indent_size = 2

[pnpm-lock.yaml]
indent_size = 2
insert_final_newline = true

# Documentation files
[*.mdx]
trim_trailing_whitespace = false